<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl_removeActivity_root"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgView_removeActivity_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent"
        android:scaleType="fitXY"
        android:src="@drawable/loading_no" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_removeActivity_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold" />

        <View
            android:layout_width="1dp"
            android:layout_height="10dp" />

        <Button
            android:id="@+id/removeAlarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_stroke_all_corner_bt_2"
            android:padding="15dp"
            android:text="문자발송 중지" />
    </LinearLayout>
</RelativeLayout>