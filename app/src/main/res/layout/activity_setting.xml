<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_settingActivity_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color_gray"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RelativeLayout
        style="@style/Top_bar"
        android:background="@drawable/bg_head2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="40dp"
            android:text="환경설정"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="15dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="문자 발신자 이름"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="10dp" />


                <EditText
                    android:id="@+id/eTxt_settingActivity_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_stroke_all_corner_edittext"
                    android:hint="이름을 입력 해주세요."
                    android:padding="10dp"
                    android:singleLine="true" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                     />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="문자 발신자 번호"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="10dp" />

                <EditText
                    android:id="@+id/eTxt_settingActivity_userPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_stroke_all_corner_edittext"
                    android:hint="연락처를 입력 해주세요."
                    android:padding="10dp"
                    android:singleLine="true" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                     />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:text="문자 발신자 거주지"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <View
                    android:visibility="gone"
                    android:layout_width="1dp"
                    android:layout_height="10dp" />


                <EditText
                    android:visibility="gone"
                    android:id="@+id/eTxt_settingActivity_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_stroke_all_corner_edittext"
                    android:hint="거주지를 입력 해주세요.(최대 12자)"
                    android:padding="10dp"
                    android:singleLine="true" />

                <View
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                     />

                <TextView
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="문자 발신자 거주지(리 및 마을명)"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <View
                    android:visibility="gone"
                    android:layout_width="1dp"
                    android:layout_height="10dp" />

                <EditText
                    android:visibility="gone"
                    android:id="@+id/eTxt_settingActivity_address2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_stroke_all_corner_edittext"
                    android:hint="리 및 마을명을 입력 해주세요.(최대 7자)"
                    android:padding="10dp"
                    android:singleLine="true" />

                <View
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                     />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="추가메세지"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="10dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <RadioGroup
                        android:id="@+id/radioGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingTop="10dp">

                        <RadioButton
                            android:id="@+id/rgBtn_settingActivity_type1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:text="뇌병변" />

                        <RadioButton
                            android:id="@+id/rgBtn_settingActivity_type2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="치매" />

                        <RadioButton
                            android:id="@+id/rgBtn_settingActivity_type3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="중풍" />

                        <RadioButton
                            android:id="@+id/rgBtn_settingActivity_type4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="장애인" />

                        <RadioButton
                            android:id="@+id/rgBtn_settingActivity_type5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="거동불편" />

                        <RadioButton
                            android:id="@+id/rgBtn_settingActivity_type6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="환자" />

                        <RadioButton
                            android:id="@+id/rgBtn_settingActivity_type7"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="어린이" />

                        <RadioButton
                            android:id="@+id/rgBtn_settingActivity_type8"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="학생" />

                        <RadioButton
                            android:id="@+id/rgBtn_settingActivity_type0"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="직접 입력" />

                    </RadioGroup>

                    <EditText
                        android:id="@+id/eTxt_settingActivity_note"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background_stroke_all_corner_edittext"
                        android:hint="내용을 입력 해주세요."
                        android:padding="10dp"
                        android:singleLine="true"
                        android:visibility="gone" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="10dp"
                     />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="방해금지시간 설정"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <ImageButton
                        android:id="@+id/btn_settingActivity_timeInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"
                        android:padding="5dp"
                        android:src="@android:drawable/ic_menu_help" />

                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="1dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:paddingStart="10dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:paddingEnd="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp">

                    <CheckBox
                        android:id="@+id/cb_settingActivity_isTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="방해금지 시간 설정 여부" />

                    <LinearLayout
                        android:id="@+id/layout_settingActivity_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/layout_settingActivity_timeFrom"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:padding="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="시작시간"
                                android:textColor="@color/black" />

                            <View
                                android:layout_width="10dp"
                                android:layout_height="1dp" />

                            <TextView
                                android:id="@+id/tv_settingActivity_from"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/layout_settingActivity_timeTo"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="종료시간"
                                android:textColor="@color/black" />

                            <View
                                android:layout_width="10dp"
                                android:layout_height="1dp" />

                            <TextView
                                android:id="@+id/tv_settingActivity_to"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="10dp"
                     />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="지정시간(단위:시간)"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="10dp" />

                <EditText
                    android:id="@+id/eTxt_settingActivity_setTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_stroke_all_corner_edittext"
                    android:hint="지정시간을 입력 해주세요.(6시간 ~72시간)"
                    android:inputType="number"
                    android:padding="10dp"
                    android:singleLine="true" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="20dp" />

                <Button
                    android:id="@+id/btn_settingActivity_submit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|center_horizontal"
                    android:background="@drawable/background_stroke_all_corner_bt"
                    android:text="설정 저장"
                    android:textColor="@color/white" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="20dp" />

            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</LinearLayout>



